<%= simple_form_for @task, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :title, input_html: {class: "span8"}%>
  <%= f.input :description, as: :text, input_html: {class: "span8 wysihtml5", rows: 10} %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, class: "btn-primary pull-right" %>
    </div>
  </div>
<% end %>
