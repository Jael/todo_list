<div id="task_<%= task.id %>">
  <%= task.title %><br />
  <%= task.description %><br />
  <div class="btn-group">
    <%= link_to "edit", edit_task_path(task), class: 'btn btn-small' %> |
    <%= link_to "destroy", task, method: :delete, confirm: "Are you sure?", class: 'btn btn-small' %>|
    <%= link_to "finish", finish_task_path(task), method: :put, remote: true, class: 'btn btn-small'%>
  </div>
  <hr />
</div>

  
