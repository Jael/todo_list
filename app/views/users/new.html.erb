<%= simple_form_for @user, html: {class: 'form-horizontal'} do |f|  %>
  <legend>Sign up</legend>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, "Sign up", class: "btn-primary" %>
    </div>
<% end %>
  </div>

