<header class="navbar navbar-fixed-top">
  <nav class="navbar-inner">
    <div class="container">
      <%= link_to "Task Manage", root_path, class: "brand" %>
      <ul class="nav">
        <li><%= link_to "New Task", new_task_path %></li>
        <li><%= link_to "Todo", todo_tasks_path  %></li>
        <li><%= link_to "Done",  done_tasks_path %></li>
      </ul>
      <% if current_user.nil? %>
        <ul class="nav pull-right">
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        </ul>
      <% else %>
        <div class="btn-group pull-right">
        <a class="btn dropdown-@usertoggle" data-toggle="dropdown" href="#">
          <%= current_user.name %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "My profile", current_user %></li>
          <li><%= link_to "Edit", [:edit, current_user] %></li>
          <li><%= link_to "Log out", logout_path, method: :delete, confirm: "Are you sure?" %></li>
        </ul>
      </div>
    <% end %>
    </div>
  </nav>
</header>

